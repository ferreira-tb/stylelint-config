{
  "name": "@tb-dev/stylelint-config",
  "version": "1.1.7",
  "description": "Stylelint config",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@8.15.1",
  "homepage": "https://github.com/ferreira-tb/stylelint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/stylelint-config/issues"
  },
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write"
  },
  "scripts": {
    "build": "vite build",
    "bump": "miho bump --no-ask --add .",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky install",
    "release": "pnpm run build && pnpm run bump && pnpm publish",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-standard-vue": "^1.0.0"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^1.7.0",
    "@types/node": "^20.11.15",
    "eslint": "^8.56.0",
    "husky": "^9.0.8",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "taze": "^0.13.2",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}
