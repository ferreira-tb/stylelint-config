{
  "name": "@tb-dev/stylelint-config",
  "version": "1.1.3",
  "description": "Stylelint config",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@8.14.1",
  "homepage": "https://github.com/ferreira-tb/stylelint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/stylelint-config/issues"
  },
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "bump": "miho bump --no-ask --add .",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky install",
    "release": "pnpm run build && pnpm run bump && pnpm publish",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-standard-vue": "^1.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.1",
    "rollup": "^4.9.5",
    "taze": "^0.13.1",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.0"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  }
}
